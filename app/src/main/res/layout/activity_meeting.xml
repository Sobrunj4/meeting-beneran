<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MeetingActivity">

    <LinearLayout
        android:id="@+id/linear_layout_search"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="259dp"
        android:background="@drawable/btn_top"
        android:padding="15dp"
        android:orientation="vertical"
        android:paddingEnd="12dp"
        tools:ignore="RtlSymmetry">

        <TextView
            android:id="@+id/tanggal_dan_waktu"
            android:padding="10dp"
            android:background="@drawable/btn_bg"
            android:layout_width="match_parent"
            android:text="  Tanggal"
            android:textSize="25sp"
            android:layout_marginBottom="8dp"
            android:layout_height="wrap_content"/>


<!--        <TextView-->
<!--            android:id="@+id/jam_mulai"-->
<!--            android:padding="10dp"-->
<!--            android:background="@drawable/btn_bg"-->
<!--            android:text="jam mulai"-->
<!--            android:layout_width="match_parent"-->
<!--            android:textSize="25sp"-->
<!--            android:layout_marginBottom="8dp"-->
<!--            android:layout_height="wrap_content"/>-->

        <EditText
            android:id="@+id/ed_lama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:padding="10dp"
            android:background="@drawable/btn_bg"
            android:hint="Waktu"
            android:textSize="25sp"
            android:layout_marginBottom="8dp"/>

        <Button
            android:enabled="false"
            android:id="@+id/btn_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/btn_login"
            android:text="Cari"
            android:textColor="#ffff"
            android:textSize="16sp" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@id/linear_layout_search"
        android:id="@+id/rv_meeting"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ProgressBar
        android:visibility="invisible"
        android:layout_centerInParent="true"
        android:id="@+id/pb_meeting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>